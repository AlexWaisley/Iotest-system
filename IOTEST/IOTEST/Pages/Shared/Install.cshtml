@model InstallController
@{
    Layout = null;
}
<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="~/favicon.ico" rel="icon" />
    <link href="~/lib/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/Bootstrap/css/mdb.min.css" rel="stylesheet" />
    <link href="~/css/Install.css" rel="stylesheet" />
    <script src="~/lib/ParalaxBackground/Script.js"></script>
    <script src="~/lib/Bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/Bootstrap/js/mdb.min.js"></script>
    <script src="~/lib/Axios/axios.min.js"></script>
    <script src="~/lib/Vue/vue.min.js"></script>
    <script src="~/VueComponents/InstallCompoonents.js"></script>

</head>
<body>
    <div id="app">
        <backganim></backganim>
        <div id="Page" class="user-select-none">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                <div class="d-flex justify-content-center align-items-center h-75">
                    <div class="text-light">
                        <div class="d-flex justify-content-center">
                            <h1 class="DOB" style="font-family: 'Noto Sans TC', sans-serif;">IO Test system</h1>
                        </div>
                        <hr class="mt-0">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-outline-light btn-lg DOB">Установить</button>
                        </div>
                        <div class="d-flex justify-content-center align-items-center mt-1">
                            <span class="text-center">
                                Для начала вам нужно установить наше PWA приложение
                            </span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center h-25">
                    <div class="text-light">
                        <div class="d-flex justify-content-center align-items-center mt-1">
                            <span class="text-center">
                                IOTest - интерактивная платформа тестирования
                                Все что нужно, для школьного и не только тестирования на одном сайте

                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/js/Install.js"></script>
</body>
</html>